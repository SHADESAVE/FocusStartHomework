<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/timer_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="72dp"
        android:text="@string/default_time"
        android:textAlignment="center"
        android:textSize="64sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/timer_finish_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="16dp"
        android:textSize="24sp"
        android:text="@string/time_out"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/timer_text"
        app:layout_constraintStart_toStartOf="@id/timer_text"
        app:layout_constraintEnd_toEndOf="@id/timer_text"
        tools:visibility="visible"/>

    <NumberPicker
        android:id="@+id/hours_picker"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintEnd_toStartOf="@id/minutes_picker"
        app:layout_constraintStart_toStartOf="@id/timer_text"
        app:layout_constraintTop_toTopOf="@id/minutes_picker" />

    <NumberPicker
        android:id="@+id/minutes_picker"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toStartOf="@id/seconds_picker"
        app:layout_constraintStart_toEndOf="@id/hours_picker"
        app:layout_constraintTop_toBottomOf="@id/timer_text" />

    <NumberPicker
        android:id="@+id/seconds_picker"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="@+id/timer_text"
        app:layout_constraintStart_toEndOf="@id/minutes_picker"
        app:layout_constraintTop_toTopOf="@id/minutes_picker" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/hours"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@id/hours_picker"
        app:layout_constraintStart_toStartOf="@id/hours_picker"
        app:layout_constraintTop_toBottomOf="@id/hours_picker" />

    <TextView
        android:id="@+id/minutes_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/minutes"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@id/minutes_picker"
        app:layout_constraintStart_toStartOf="@id/minutes_picker"
        app:layout_constraintTop_toBottomOf="@id/minutes_picker" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/seconds"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@id/seconds_picker"
        app:layout_constraintStart_toStartOf="@id/seconds_picker"
        app:layout_constraintTop_toBottomOf="@id/seconds_picker" />

        <ImageButton
            android:id="@+id/play_image_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="48dp"
            android:background="#00000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/timer_text"
            app:layout_constraintStart_toStartOf="@id/timer_text"
            app:layout_constraintTop_toBottomOf="@+id/minutes_text"
            app:layout_constraintVertical_bias="1.0"
            android:src="@drawable/ic_baseline_play_circle_filled_48" />

        <ImageButton
            android:id="@+id/pause_image_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="48dp"
            android:background="#00000000"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/play_image_button"
            app:layout_constraintEnd_toEndOf="@id/play_image_button"
            app:layout_constraintStart_toStartOf="@id/play_image_button"
            app:layout_constraintTop_toTopOf="@+id/play_image_button"
            app:layout_constraintVertical_bias="1.0"
            android:src="@drawable/ic_baseline_pause_circle_filled_48" />

    <ImageButton
        android:id="@+id/refresh_image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:src="@drawable/ic_baseline_refresh_48"
        android:background="#00000000"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/play_image_button"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/timer_text"
        app:layout_constraintTop_toBottomOf="@id/minutes_text"
        app:layout_constraintVertical_bias="1.0"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>