<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/authFragment">

    <fragment
        android:id="@+id/authFragment"
        android:name="com.example.focusstarthomework.authentication.ui.AuthFragment"
        android:label="AuthFragment"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_authFragment_to_loansListFragment"
            app:destination="@id/loansListFragment" />
    </fragment>

    <fragment
        android:id="@+id/loansListFragment"
        android:name="com.example.focusstarthomework.loans.ui.fragments.LoansListFragment"
        android:label="LoansListFragment"
        tools:layout="@layout/fragment_loans_list">
        <action
            android:id="@+id/action_loansListFragment_to_loanFragment"
            app:destination="@id/loanFragment" />
        <action
            android:id="@+id/action_loansListFragment_to_authFragment"
            app:popUpTo="@+id/authFragment"
            app:popUpToInclusive="true"
            app:destination="@id/authFragment" />
    </fragment>

    <fragment
        android:id="@+id/loanFragment"
        android:name="com.example.focusstarthomework.loans.ui.fragments.LoanFragment"
        android:label="LoanFragment"
        tools:layout="@layout/fragment_loan">
        <action
            android:id="@+id/action_loanFragment_to_authFragment"
            app:popUpTo="@+id/authFragment"
            app:popUpToInclusive="true"
            app:destination="@id/authFragment" />
    </fragment>

</navigation>